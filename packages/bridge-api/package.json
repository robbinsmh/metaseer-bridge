{
  "name": "@sol-bsc-bridge/api",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy": "NODE_ENV=dev && yarn deploy:env",
    "deploy:prod": "NODE_ENV=production && yarn deploy:env",
    "deploy:staging": "NODE_ENV=staging && yarn deploy:env",
    "lint": "eslint src --ext ts,js --no-ignore --fix",
    "tsc": "tsc --incremental --noEmit",
    "local:signBscMessage": "sls invoke local -f signBscMessage --path src/functions/signBscMessage/mock.json",
    "local:signSolMessage": "sls invoke local -f signSolMessage --path src/functions/signSolMessage/mock.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "sls webpack",
    "package": "sls package"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.18.0",
    "@middy/core": "^2.3.0",
    "@middy/http-cors": "^2.3.0",
    "@middy/http-error-handler": "^2.3.0",
    "@middy/http-json-body-parser": "^2.3.0",
    "@solana/web3.js": "^1.17.0",
    "ethers": "^5.3.0",
    "hash-wasm": "^4.8.0",
    "http-errors": "^1.8.0",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.43.1",
    "@types/aws-lambda": "^8.10.77",
    "@types/http-errors": "^1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.1",
    "@types/node-fetch": "^2.5.10",
    "dotenv": "^10.0.0",
    "jest": "^27.0.4",
    "json-schema-to-ts": "^1.6.4",
    "serverless-webpack": "^5.5.0",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "type-fest": "^1.2.0",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-node-externals": "^3.0.0"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
