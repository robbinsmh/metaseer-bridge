{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "serverless.ts"]
}
